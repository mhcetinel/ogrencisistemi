@model IEnumerable<ogrencisistemi.Models.Ogrenci>

@{
    ViewBag.Title = "Index";
}

<h2>Öğrenciler</h2>

<p>
    @Html.ActionLink("Kayıt Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BasariDurumu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aldigiegitim)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Soyad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BasariDurumu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aldigiegitim)
        </td>
        <td>
            <a href="/Ogrenci/Edit/@item.Id " class="btn btn-warning btn-xs" title="Edit">  <span class="glyphicon glyphicon-edit"></span> </a>
            <a href="/Ogrenci/Delete/@item.Id " class="btn btn-danger btn-xs" title="Delete">  <span class="glyphicon glyphicon-trash"></span> </a>
            <a href="/Ogrenci/Details/@item.Id " class="btn btn-success btn-xs" title="Detail">  <span class="glyphicon glyphicon-apple"></span> </a>

        </td>
    </tr>
}

</table>
